@model IEnumerable<BloodBankingSystem.Models.Donor>

@{
    ViewData["Title"] = "Search Results";
}

<h1>Search Results</h1>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Blood Type</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var donor in Model)
            {
                <tr>
                    <td>@donor.Name</td>
                    <td>@donor.Name</td>
                    <td>@donor.Email</td>
                    <td>@donor.PhoneNumber</td>
                    <td>@donor.BloodType</td>
                    <td>@donor.Address</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No donors found with the specified blood type.</p>
}
